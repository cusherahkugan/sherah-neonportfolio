---
// 3D Elements Component - Pure CSS 3D animations
---

<div class="scene-3d">
  <!-- Floating Cubes -->
  <div class="floating-cube cube-1">
    <div class="cube-face front"></div>
    <div class="cube-face back"></div>
    <div class="cube-face right"></div>
    <div class="cube-face left"></div>
    <div class="cube-face top"></div>
    <div class="cube-face bottom"></div>
  </div>

  <div class="floating-cube cube-2">
    <div class="cube-face front"></div>
    <div class="cube-face back"></div>
    <div class="cube-face right"></div>
    <div class="cube-face left"></div>
    <div class="cube-face top"></div>
    <div class="cube-face bottom"></div>
  </div>

  <div class="floating-cube cube-3">
    <div class="cube-face front"></div>
    <div class="cube-face back"></div>
    <div class="cube-face right"></div>
    <div class="cube-face left"></div>
    <div class="cube-face top"></div>
    <div class="cube-face bottom"></div>
  </div>

  <!-- Rotating Rings -->
  <div class="rotating-ring ring-1"></div>
  <div class="rotating-ring ring-2"></div>
  <div class="rotating-ring ring-3"></div>

  <!-- DNA Helix -->
  <div class="dna-helix">
    <div class="dna-strand strand-1"></div>
    <div class="dna-strand strand-2"></div>
  </div>
</div>

<style>
  .scene-3d {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    perspective: 1000px;
    z-index: 0;
    overflow: hidden;
  }

  /* Floating 3D Cubes */
  .floating-cube {
    position: absolute;
    width: 100px;
    height: 100px;
    transform-style: preserve-3d;
    animation: float-rotate 20s infinite linear;
  }

  .cube-1 {
    top: 20%;
    left: 10%;
    animation-duration: 25s;
  }

  .cube-2 {
    top: 60%;
    right: 15%;
    animation-duration: 30s;
    animation-delay: -10s;
  }

  .cube-3 {
    bottom: 20%;
    left: 50%;
    animation-duration: 35s;
    animation-delay: -20s;
  }

  .cube-face {
    position: absolute;
    width: 100px;
    height: 100px;
    background: linear-gradient(135deg, rgba(167, 139, 250, 0.3), rgba(236, 72, 153, 0.3));
    border: 1px solid rgba(167, 139, 250, 0.5);
    backdrop-filter: blur(5px);
  }

  .front {
    transform: translateZ(50px);
  }

  .back {
    transform: translateZ(-50px) rotateY(180deg);
  }

  .right {
    transform: rotateY(-270deg) translateX(50px);
    transform-origin: top right;
  }

  .left {
    transform: rotateY(270deg) translateX(-50px);
    transform-origin: center left;
  }

  .top {
    transform: rotateX(-270deg) translateY(-50px);
    transform-origin: top center;
  }

  .bottom {
    transform: rotateX(270deg) translateY(50px);
    transform-origin: bottom center;
  }

  @keyframes float-rotate {
    0% {
      transform: translateY(0px) rotateX(0deg) rotateY(0deg) rotateZ(0deg);
    }
    25% {
      transform: translateY(-30px) rotateX(90deg) rotateY(90deg) rotateZ(0deg);
    }
    50% {
      transform: translateY(0px) rotateX(180deg) rotateY(180deg) rotateZ(90deg);
    }
    75% {
      transform: translateY(-30px) rotateX(270deg) rotateY(270deg) rotateZ(180deg);
    }
    100% {
      transform: translateY(0px) rotateX(360deg) rotateY(360deg) rotateZ(360deg);
    }
  }

  /* Rotating Rings */
  .rotating-ring {
    position: absolute;
    width: 200px;
    height: 200px;
    border: 3px solid transparent;
    border-top-color: rgba(167, 139, 250, 0.5);
    border-right-color: rgba(236, 72, 153, 0.5);
    border-radius: 50%;
    animation: spin-3d 10s linear infinite;
  }

  .ring-1 {
    top: 30%;
    right: 20%;
    transform: rotateX(60deg) rotateY(30deg);
    animation-duration: 12s;
  }

  .ring-2 {
    bottom: 30%;
    left: 25%;
    transform: rotateX(-45deg) rotateY(60deg);
    animation-duration: 15s;
    animation-delay: -5s;
  }

  .ring-3 {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) rotateX(30deg) rotateZ(45deg);
    width: 300px;
    height: 300px;
    animation-duration: 20s;
    animation-delay: -10s;
  }

  @keyframes spin-3d {
    0% {
      transform: rotate(0deg) rotateX(60deg) rotateY(30deg);
    }
    100% {
      transform: rotate(360deg) rotateX(60deg) rotateY(30deg);
    }
  }

  /* DNA Helix */
  .dna-helix {
    position: absolute;
    top: 10%;
    right: 5%;
    width: 150px;
    height: 400px;
    transform-style: preserve-3d;
    animation: helix-rotate 15s linear infinite;
  }

  .dna-strand {
    position: absolute;
    width: 20px;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(167, 139, 250, 0.6) 0%,
      rgba(236, 72, 153, 0.6) 25%,
      rgba(6, 182, 212, 0.6) 50%,
      rgba(236, 72, 153, 0.6) 75%,
      rgba(167, 139, 250, 0.6) 100%
    );
    border-radius: 10px;
  }

  .strand-1 {
    left: 0;
    transform: rotateY(0deg) translateX(60px);
  }

  .strand-2 {
    right: 0;
    transform: rotateY(180deg) translateX(60px);
  }

  @keyframes helix-rotate {
    0% {
      transform: rotateY(0deg);
    }
    100% {
      transform: rotateY(360deg);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .floating-cube {
      width: 60px;
      height: 60px;
      display: none; /* Hide on mobile for performance */
    }

    .cube-face {
      width: 60px;
      height: 60px;
    }

    .rotating-ring {
      width: 120px;
      height: 120px;
    }

    .ring-3 {
      width: 180px;
      height: 180px;
    }

    .dna-helix {
      width: 100px;
      height: 250px;
      display: none; /* Hide on mobile for performance */
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .floating-cube,
    .rotating-ring,
    .dna-helix {
      animation: none;
    }
  }
</style>