<section id="education" class="education-section">
  <div class="education-container">
    <h2 class="section-title fade-in">EDUCATION</h2>
    
    <div class="education-content">
      <div class="education-main fade-in">
        <div class="education-card glass-card">
          <div class="card-corner tl"></div>
          <div class="card-corner tr"></div>
          <div class="card-corner bl"></div>
          <div class="card-corner br"></div>
          
          <div class="education-header">
            <div class="university-logo">
              <svg viewBox="0 0 24 24" fill="none" stroke="var(--tron-green)" stroke-width="2">
                <path d="M22 10v6M2 10l10-5 10 5-10 5z"></path>
                <path d="M6 12v5c3 3 9 3 12 0v-5"></path>
              </svg>
            </div>
            <div class="education-title-wrapper">
              <h3 class="degree-title">Bachelor of Science (Hons) in Information Systems</h3>
              <div class="university-name">University of Colombo School of Computing (UCSC)</div>
              <div class="education-period">
                <svg class="period-icon" viewBox="0 0 24 24" fill="none" stroke="var(--tron-green)" stroke-width="2">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                <span>2022 - Present</span>
              </div>
            </div>
          </div>
          
          <div class="academic-stats">
            <div class="stat-item gpa-stat">
              <div class="stat-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="var(--tron-green)" stroke-width="2">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                </svg>
              </div>
              <div class="stat-content">
                <div class="stat-label">Current GPA</div>
                <div class="stat-value gpa-value">3.6</div>
              </div>
            </div>
            
            <div class="achievements-stats">
              <div class="achievement-badge">
                <svg viewBox="0 0 24 24" fill="var(--tron-green)">
                  <path d="M12 2L15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2Z"/>
                </svg>
                <span>Dean's List</span>
              </div>
              <div class="dean-list-items">
                <span class="dean-badge">2nd Year - 1st Sem</span>
                <span class="dean-badge">3rd Year - 1st Sem</span>
              </div>
            </div>
          </div>
          
          <div class="education-highlights">
            <h4 class="highlights-title">
              <span class="bracket">&lt;</span>
              HIGHLIGHTS
              <span class="bracket">/&gt;</span>
            </h4>
            
            <div class="highlights-grid">
              <div class="highlight-item">
                <div class="highlight-icon">
                  <svg viewBox="0 0 24 24" fill="none" stroke="var(--tron-green)" stroke-width="2">
                    <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"></path>
                    <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"></path>
                    <path d="M4 22h16"></path>
                    <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"></path>
                    <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"></path>
                    <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"></path>
                  </svg>
                </div>
                <div class="highlight-content">
                  <div class="highlight-title">Hackathons</div>
                  <div class="highlight-desc">Top 30 — FreshHack 3.0<br/>Top 10 — PyHack 2.0</div>
                </div>
              </div>
              
              <div class="highlight-item">
                <div class="highlight-icon">
                  <svg viewBox="0 0 24 24" fill="none" stroke="var(--tron-green)" stroke-width="2">
                    <path d="M12 19l7 4-7-20-7 20 7-4z"></path>
                    <path d="M2 9h20"></path>
                  </svg>
                </div>
                <div class="highlight-content">
                  <div class="highlight-title">Design Contributions</div>
                  <div class="highlight-desc">IEEE Design Team<br/>Astronomical Society<br/>Pahasara Media</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="coursework-section fade-in">
        <div class="coursework-card glass-card">
          <h4 class="coursework-title">
            <svg class="code-icon" viewBox="0 0 24 24" fill="none" stroke="var(--tron-green)" stroke-width="2">
              <polyline points="16 18 22 12 16 6"></polyline>
              <polyline points="8 6 2 12 8 18"></polyline>
            </svg>
            KEY COURSEWORK
          </h4>
          <div class="coursework-list">
            <div class="course-item">
              <span class="course-bullet">▹</span>
              <span>Data Structures & Algorithms</span>
            </div>
            <div class="course-item">
              <span class="course-bullet">▹</span>
              <span>Object-Oriented Programming</span>
            </div>
            <div class="course-item">
              <span class="course-bullet">▹</span>
              <span>Database Management Systems</span>
            </div>
            <div class="course-item">
              <span class="course-bullet">▹</span>
              <span>Web Development</span>
            </div>
            <div class="course-item">
              <span class="course-bullet">▹</span>
              <span>Software Engineering</span>
            </div>
            <div class="course-item">
              <span class="course-bullet">▹</span>
              <span>Computer Networks</span>
            </div>
            <div class="course-item">
              <span class="course-bullet">▹</span>
              <span>Machine Learning</span>
            </div>
            <div class="course-item">
              <span class="course-bullet">▹</span>
              <span>Information Security</span>
            </div>
          </div>
        </div>
        
        <div class="research-card glass-card">
          <h4 class="research-title">
            <svg class="research-icon" viewBox="0 0 24 24" fill="none" stroke="var(--tron-green)" stroke-width="2">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
              <line x1="11" y1="8" x2="11" y2="14"></line>
              <line x1="8" y1="11" x2="14" y2="11"></line>
            </svg>
            RESEARCH FOCUS
          </h4>
          <div class="research-content">
            <p class="research-topic">Tamper-Resilient Federated Learning</p>
            <p class="research-desc">
              Conducting undergraduate research on defending Federated Learning systems 
              against model poisoning attacks, focusing on tamper-resilient aggregation 
              mechanisms and evaluating robustness against adversarial clients.
            </p>
            <div class="research-tags">
              <span class="research-tag">Machine Learning Security</span>
              <span class="research-tag">Federated Learning</span>
              <span class="research-tag">Model Poisoning Defense</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .education-section {
    background: var(--tron-black);
  }

  .education-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .education-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  .education-card {
    padding: 3rem;
    position: relative;
  }

  .card-corner {
    position: absolute;
    width: 30px;
    height: 30px;
    border: 3px solid var(--tron-green);
  }

  .card-corner.tl {
    top: -2px;
    left: -2px;
    border-right: none;
    border-bottom: none;
  }

  .card-corner.tr {
    top: -2px;
    right: -2px;
    border-left: none;
    border-bottom: none;
  }

  .card-corner.bl {
    bottom: -2px;
    left: -2px;
    border-right: none;
    border-top: none;
  }

  .card-corner.br {
    bottom: -2px;
    right: -2px;
    border-left: none;
    border-top: none;
  }

  .education-header {
    display: flex;
    gap: 2rem;
    margin-bottom: 2.5rem;
    align-items: flex-start;
  }

  .university-logo {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--tron-green);
    border-radius: 50%;
    padding: 15px;
    flex-shrink: 0;
    box-shadow: 0 0 20px rgba(0, 255, 65, 0.3);
  }

  .university-logo svg {
    width: 100%;
    height: 100%;
  }

  .education-title-wrapper {
    flex: 1;
  }

  .degree-title {
    font-size: 1.8rem;
    color: var(--tron-green);
    margin-bottom: 0.8rem;
    font-weight: 700;
    line-height: 1.3;
  }

  .university-name {
    font-size: 1.2rem;
    color: #ffffff;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .education-period {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #b0b0b0;
    font-family: 'Orbitron', sans-serif;
  }

  .period-icon {
    width: 18px;
    height: 18px;
  }

  .academic-stats {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 2rem;
    margin-bottom: 2.5rem;
    padding: 2rem;
    background: rgba(0, 255, 65, 0.05);
    border: 1px solid var(--glass-border);
    border-radius: 12px;
  }

  .stat-item {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .stat-icon {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--tron-green);
    border-radius: 50%;
    padding: 12px;
  }

  .stat-icon svg {
    width: 100%;
    height: 100%;
  }

  .stat-label {
    font-size: 0.9rem;
    color: #b0b0b0;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 0.5rem;
  }

  .stat-value {
    font-family: 'Orbitron', sans-serif;
    font-size: 3rem;
    font-weight: 900;
    color: var(--tron-green);
    text-shadow: 0 0 30px var(--tron-green);
    line-height: 1;
  }

  .achievements-stats {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .achievement-badge {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    font-family: 'Orbitron', sans-serif;
    font-size: 1.1rem;
    color: var(--tron-green);
    font-weight: 700;
  }

  .achievement-badge svg {
    width: 24px;
    height: 24px;
  }

  .dean-list-items {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
  }

  .dean-badge {
    padding: 0.5rem 1rem;
    background: var(--tron-green);
    color: var(--tron-black);
    border-radius: 20px;
    font-family: 'Orbitron', sans-serif;
    font-size: 0.85rem;
    font-weight: 700;
    box-shadow: 0 0 20px rgba(0, 255, 65, 0.5);
  }

  .education-highlights {
    padding-top: 2rem;
    border-top: 1px solid var(--glass-border);
  }

  .highlights-title {
    font-size: 1.3rem;
    color: #ffffff;
    margin-bottom: 1.5rem;
    font-weight: 700;
  }

  .bracket {
    color: var(--tron-green);
  }

  .highlights-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .highlight-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .highlight-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--tron-green);
    border-radius: 50%;
    padding: 8px;
    flex-shrink: 0;
  }

  .highlight-icon svg {
    width: 100%;
    height: 100%;
  }

  .highlight-title {
    font-family: 'Orbitron', sans-serif;
    color: var(--tron-green);
    font-weight: 600;
    margin-bottom: 0.3rem;
    font-size: 0.95rem;
  }

  .highlight-desc {
    color: #d0d0d0;
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .coursework-section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    position: sticky;
    top: 100px;
  }

  .coursework-card,
  .research-card {
    padding: 2rem;
  }

  .coursework-title,
  .research-title {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    font-size: 1.2rem;
    color: var(--tron-green);
    margin-bottom: 1.5rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .code-icon,
  .research-icon {
    width: 28px;
    height: 28px;
  }

  .coursework-list {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .course-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: #d0d0d0;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    padding: 0.3rem 0;
  }

  .course-bullet {
    color: var(--tron-green);
    font-size: 1.2rem;
  }

  .course-item:hover {
    color: var(--tron-green);
    transform: translateX(10px);
  }

  .research-topic {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.1rem;
    color: #ffffff;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .research-desc {
    color: #d0d0d0;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .research-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .research-tag {
    padding: 0.4rem 0.9rem;
    background: rgba(0, 255, 65, 0.1);
    border: 1px solid var(--tron-green);
    border-radius: 15px;
    font-size: 0.8rem;
    color: var(--tron-green);
    font-family: 'Orbitron', sans-serif;
  }

  @media (max-width: 1200px) {
    .education-content {
      grid-template-columns: 1fr;
    }

    .coursework-section {
      position: relative;
      top: 0;
    }

    .highlights-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .education-card {
      padding: 2rem;
    }

    .education-header {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .degree-title {
      font-size: 1.5rem;
    }

    .academic-stats {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .stat-item {
      flex-direction: column;
    }

    .achievements-stats {
      align-items: center;
    }

    .dean-list-items {
      justify-content: center;
    }
  }
</style>