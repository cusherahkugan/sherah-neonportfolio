<style>
  .contact-section {
    background: linear-gradient(135deg, var(--tron-dark) 0%, var(--tron-black) 100%);
    padding-bottom: 2rem;
  }

  .contact-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .info-header {
    margin-bottom: 3rem;
  }

  .info-title {
    font-size: 2rem;
    color: #ffffff;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .bracket {
    color: var(--tron-green);
  }

  .info-subtitle {
    color: #d0d0d0;
    line-height: 1.8;
    font-size: 1.1rem;
  }

  .highlight {
    color: var(--tron-green);
    font-weight: 600;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .contact-method:not(.location) {
    cursor: pointer;
  }

  .contact-method:not(.location):hover {
    transform: translateX(10px);
  }

  .method-icon {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--tron-green);
    border-radius: 50%;
    padding: 10px;
    flex-shrink: 0;
  }

  .method-icon svg {
    width: 100%;
    height: 100%;
  }

  .method-details {
    flex: 1;
  }

  .method-label {
    font-size: 0.9rem;
    color: #b0b0b0;
    margin-bottom: 0.3rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .method-value {
    font-size: 1.1rem;
    color: var(--tron-green);
    font-family: 'Orbitron', sans-serif;
    font-weight: 600;
  }

  .social-links {
    margin-top: 3rem;
  }

  .social-title {
    font-size: 1.2rem;
    color: #ffffff;
    margin-bottom: 1.5rem;
    font-family: 'Orbitron', sans-serif;
  }

  .social-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .social-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.8rem;
    padding: 1.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .social-card svg {
    width: 40px;
    height: 40px;
  }

  .social-card span {
    color: #ffffff;
    font-family: 'Orbitron', sans-serif;
    font-size: 0.9rem;
  }

  .social-card:hover {
    transform: translateY(-5px) scale(1.05);
  }

  .terminal-window {
    margin-bottom: 2rem;
  }

  .terminal-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    border-bottom: 1px solid var(--glass-border);
  }

  .terminal-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .btn {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .btn.red { background: #ff5f56; }
  .btn.yellow { background: #ffbd2e; }
  .btn.green { background: #27c93f; }

  .terminal-title {
    font-family: 'Orbitron', sans-serif;
    color: #b0b0b0;
    font-size: 0.9rem;
  }

  .terminal-body {
    padding: 1.5rem;
    font-family: 'Courier New', monospace;
  }

  .terminal-line {
    margin-bottom: 1rem;
  }

  .prompt {
    color: var(--tron-green);
    margin-right: 0.5rem;
  }

  .command {
    color: #ffffff;
  }

  .typing {
    animation: typing 2s steps(30) infinite;
  }

  .cursor-blink {
    color: var(--tron-green);
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  .terminal-output {
    margin: 1rem 0 1rem 1.5rem;
    color: #d0d0d0;
    line-height: 1.8;
  }

  .key {
    color: var(--tron-green);
    font-weight: 600;
  }

  .references-section {
    margin-top: 2rem;
  }

  .references-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.2rem;
    color: var(--tron-green);
    margin-bottom: 1rem;
    letter-spacing: 2px;
  }

  .reference-card {
    padding: 1.5rem;
    margin-bottom: 1rem;
  }

  .reference-name {
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .reference-position {
    color: #b0b0b0;
    font-size: 0.95rem;
    margin-bottom: 0.3rem;
  }

  .reference-email {
    color: var(--tron-green);
    text-decoration: none;
    font-family: 'Orbitron', sans-serif;
    font-size: 0.9rem;
    display: inline-block;
    margin-top: 0.5rem;
  }

  .reference-email:hover {
    text-decoration: underline;
  }

  .footer {
    margin-top: 6rem;
    padding: 2rem 0;
    border-top: 2px solid var(--glass-border);
  }

  .footer-content {
    text-align: center;
  }

  .footer-text {
    color: #ffffff;
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .footer-year {
    color: #b0b0b0;
    font-size: 0.9rem;
  }

  @media (max-width: 968px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .social-grid {
      grid-template-columns: 1fr;
    }
  }
</style>