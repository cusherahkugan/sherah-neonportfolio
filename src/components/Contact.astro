---
import { Mail, Phone, MapPin, Github, Linkedin, Send, User, MessageSquare } from 'lucide-react';

const contactInfo = [
  {
    icon: Mail,
    label: 'Email',
    value: 'cusherahkugan@gmail.com',
    href: 'mailto:cusherahkugan@gmail.com',
    color: 'neon-red'
  },
  {
    icon: Phone,
    label: 'Phone',
    value: '+94 766741405',
    href: 'tel:+94766741405',
    color: 'neon-blue'
  },
  {
    icon: MapPin,
    label: 'Location',
    value: 'Colombo, Sri Lanka',
    href: '#',
    color: 'neon-pink'
  },
];

const socialLinks = [
  {
    icon: Github,
    name: 'GitHub',
    username: '@cusherah-kugan',
    href: 'https://github.com/cusherah-kugan',
    color: 'neon-blue'
  },
  {
    icon: Linkedin,
    name: 'LinkedIn',
    username: '@cusherah-kugan',
    href: 'https://linkedin.com/in/cusherah-kugan',
    color: 'neon-red'
  },
];

const references = [
  {
    name: 'Dr. Dinuni K. Fernando',
    title: 'PhD (SUNY Binghamton, USA)',
    position: 'Senior Lecturer, UCSC',
    email: 'dkf@ucsc.cmb.ac.lk'
  },
  {
    name: 'Dr. Roshan Rajapakse',
    title: 'Lecturer',
    position: 'University of Colombo School of Computing',
    email: 'rnr@ucsc.cmb.ac.lk'
  },
];
---

<section id="contact" class="section-container">
  <div class="max-w-7xl mx-auto">
    
    <!-- Section Header -->
    <div class="text-center mb-16 animate-fade-in">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Get In <span class="gradient-text">Touch</span>
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-neon-red to-neon-blue mx-auto mb-4"></div>
      <p class="text-gray-400 max-w-2xl mx-auto">
        Let's collaborate on your next project. Feel free to reach out for opportunities, questions, or just to say hi!
      </p>
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
      
      <!-- Left: Contact Info & Social -->
      <div class="lg:col-span-1 space-y-6 animate-slide-up">
        
        <!-- Contact Cards -->
        <div class="space-y-4">
          {contactInfo.map((contact, index) => {
            const Icon = contact.icon;
            return (
              <a 
                href={contact.href}
                class="glass rounded-xl p-6 hover-lift group flex items-start gap-4 transition-all hover:border-white/20"
                style={`animation-delay: ${index * 0.1}s;`}
              >
                <div class={`p-3 rounded-lg bg-${contact.color}/20 border border-${contact.color}/30 group-hover:scale-110 transition-transform`}>
                  <Icon class={`w-6 h-6 text-${contact.color}`} />
                </div>
                <div class="flex-1">
                  <p class="text-sm text-gray-400 mb-1">{contact.label}</p>
                  <p class="font-semibold group-hover:text-white transition-colors">
                    {contact.value}
                  </p>
                </div>
              </a>
            );
          })}
        </div>

        <!-- Social Links -->
        <div class="glass rounded-xl p-6">
          <h3 class="text-lg font-bold mb-4">Connect With Me</h3>
          <div class="space-y-3">
            {socialLinks.map((social) => {
              const Icon = social.icon;
              return (
                <a 
                  href={social.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center gap-4 p-3 rounded-lg hover:bg-white/5 transition-all group"
                >
                  <div class={`p-2 rounded-lg bg-${social.color}/20 border border-${social.color}/30 group-hover:scale-110 transition-transform`}>
                    <Icon class="w-5 h-5" />
                  </div>
                  <div class="flex-1">
                    <p class="font-semibold group-hover:text-white transition-colors">
                      {social.name}
                    </p>
                    <p class="text-sm text-gray-400">{social.username}</p>
                  </div>
                </a>
              );
            })}
          </div>
        </div>

        <!-- References -->
        <div class="glass rounded-xl p-6">
          <h3 class="text-lg font-bold mb-4">References</h3>
          <div class="space-y-4">
            {references.map((ref) => (
              <div class="pb-4 border-b border-white/10 last:border-0 last:pb-0">
                <p class="font-semibold text-white mb-1">{ref.name}</p>
                <p class="text-sm text-gray-400 mb-1">{ref.title}</p>
                <p class="text-sm text-gray-400 mb-2">{ref.position}</p>
                <a 
                  href={`mailto:${ref.email}`}
                  class="text-sm text-neon-blue hover:text-neon-pink transition-colors"
                >
                  {ref.email}
                </a>
              </div>
            ))}
          </div>
        </div>

      </div>

      <!-- Right: Contact Form -->
      <div class="lg:col-span-2 animate-slide-up" style="animation-delay: 0.2s;">
        <div class="glass rounded-2xl p-8 border-l-4 border-neon-blue">
          <h3 class="text-2xl font-bold mb-6 gradient-text-alt">Send Me a Message</h3>
          
          <form class="space-y-6" id="contact-form">
            <!-- Name Input -->
            <div class="space-y-2">
              <label for="name" class="text-sm font-semibold text-gray-300 flex items-center gap-2">
                <User className="w-4 h-4" />
                Your Name
              </label>
              <input 
                type="text" 
                id="name" 
                name="name"
                required
                class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:outline-none focus:border-neon-blue focus:ring-2 focus:ring-neon-blue/20 transition-all placeholder:text-gray-500"
                placeholder="John Doe"
              />
            </div>

            <!-- Email Input -->
            <div class="space-y-2">
              <label for="email" class="text-sm font-semibold text-gray-300 flex items-center gap-2">
                <Mail className="w-4 h-4" />
                Your Email
              </label>
              <input 
                type="email" 
                id="email" 
                name="email"
                required
                class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:outline-none focus:border-neon-blue focus:ring-2 focus:ring-neon-blue/20 transition-all placeholder:text-gray-500"
                placeholder="john@example.com"
              />
            </div>

            <!-- Subject Input -->
            <div class="space-y-2">
              <label for="subject" class="text-sm font-semibold text-gray-300 flex items-center gap-2">
                <MessageSquare className="w-4 h-4" />
                Subject
              </label>
              <input 
                type="text" 
                id="subject" 
                name="subject"
                required
                class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:outline-none focus:border-neon-blue focus:ring-2 focus:ring-neon-blue/20 transition-all placeholder:text-gray-500"
                placeholder="Project Collaboration"
              />
            </div>

            <!-- Message Textarea -->
            <div class="space-y-2">
              <label for="message" class="text-sm font-semibold text-gray-300 flex items-center gap-2">
                <MessageSquare className="w-4 h-4" />
                Message
              </label>
              <textarea 
                id="message" 
                name="message"
                rows="6"
                required
                class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:outline-none focus:border-neon-blue focus:ring-2 focus:ring-neon-blue/20 transition-all resize-none placeholder:text-gray-500"
                placeholder="Tell me about your project..."
              ></textarea>
            </div>

            <!-- Submit Button -->
            <button 
              type="submit"
              class="w-full md:w-auto px-8 py-4 bg-gradient-to-r from-neon-red to-neon-pink rounded-lg font-semibold transition-all hover:scale-105 hover:shadow-2xl hover:shadow-neon-red/50 flex items-center justify-center gap-2 group"
            >
              <span>Send Message</span>
              <Send className="w-5 h-5 group-hover:translate-x-1 transition-transform" />
            </button>

            <!-- Success Message -->
            <div id="success-message" class="hidden p-4 bg-green-500/20 border border-green-500/30 rounded-lg">
              <p class="text-green-400 font-semibold">âœ“ Message sent successfully! I'll get back to you soon.</p>
            </div>
          </form>
        </div>
      </div>

    </div>

  </div>
</section>

<script>
  // Form submission handler
  const form = document.getElementById('contact-form');
  const successMessage = document.getElementById('success-message');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(form as HTMLFormElement);
    const data = Object.fromEntries(formData);
    
    // Simulate form submission (replace with actual API call)
    console.log('Form submitted:', data);
    
    // Show success message
    successMessage?.classList.remove('hidden');
    
    // Reset form
    (form as HTMLFormElement).reset();
    
    // Hide success message after 5 seconds
    setTimeout(() => {
      successMessage?.classList.add('hidden');
    }, 5000);
  });
</script>