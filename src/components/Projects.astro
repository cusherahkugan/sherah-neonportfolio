---
import { ExternalLink, Github, Calendar } from 'lucide-react';

const projects = [
  {
    year: '2025',
    title: 'Careera',
    description: 'AI-powered recruitment platform with resume parsing, job matching, and ATS for application management. Integrates NextAuth for authentication and OpenAI for intelligent candidate-job recommendations.',
    tech: ['Next.js', 'Prisma', 'OpenAI', 'NextAuth', 'TypeScript'],
    color: 'neon-blue',
    gradient: 'from-neon-blue to-neon-purple',
    icon: 'ü§ñ'
  },
  {
    year: '2025',
    title: 'PropertyLanka',
    description: 'Property listing platform with search, filtering, and dynamic routing, built following Coursera\'s Next.js specialization. Supports user authentication and responsive UI for seamless browsing and property management.',
    tech: ['Next.js', 'Tailwind CSS', 'TypeScript', 'API Routes'],
    color: 'neon-red',
    gradient: 'from-neon-red to-neon-pink',
    icon: 'üè†'
  },
  {
    year: '2025',
    title: 'Chirpy',
    description: 'Tutorial-based microblogging platform extended with additional features like profile management, likes, and comment functionality. Implements secure authentication and user interactions to mimic a full-featured social platform.',
    tech: ['Laravel', 'PHP', 'SQLite', 'Blade Templates'],
    color: 'neon-pink',
    gradient: 'from-neon-pink to-neon-purple',
    icon: 'üê¶'
  },
  {
    year: '2024',
    title: 'Eventix',
    description: 'Event management system for UCSC clubs enabling authentication, real-time updates, and dashboards for participant tracking. Features an interactive calendar and notifications for smooth event coordination.',
    tech: ['React.js', 'Tailwind CSS', 'Spring Boot', 'AWS RDS', 'MySQL'],
    color: 'neon-purple',
    gradient: 'from-neon-purple to-neon-blue',
    icon: 'üìÖ'
  },
  {
    year: '2023',
    title: 'FarmToKeells',
    description: 'Web platform connecting local farmers with Keells supermarkets for efficient supply management. Includes inventory tracking, delivery scheduling, and order management to streamline farm-to-store operations.',
    tech: ['PHP', 'MySQL', 'HTML', 'CSS', 'JavaScript'],
    color: 'neon-blue',
    gradient: 'from-neon-blue to-neon-red',
    icon: 'üåæ'
  },
];
---

<section id="projects" class="section-container bg-gradient-to-b from-transparent via-black/50 to-transparent">
  <div class="max-w-7xl mx-auto">
    
    <!-- Section Header -->
    <div class="text-center mb-16 animate-fade-in">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Featured <span class="gradient-text">Projects</span>
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-neon-blue to-neon-pink mx-auto mb-4"></div>
      <p class="text-gray-400 max-w-2xl mx-auto">
        A showcase of my recent work spanning web development, AI integration, and full-stack applications
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="space-y-8">
      {projects.map((project, index) => (
        <div 
          class={`glass rounded-2xl overflow-hidden hover-lift group animate-slide-up ${index % 2 === 0 ? '' : ''}`}
          style={`animation-delay: ${index * 0.1}s;`}
        >
          <div class={`grid md:grid-cols-${index % 2 === 0 ? '5' : '5'} gap-0`}>
            
            {/* Left Side - Year & Icon */}
            <div class={`${index % 2 === 0 ? 'md:col-span-1' : 'md:col-span-1 md:order-2'} bg-gradient-to-br ${project.gradient} p-8 flex flex-col items-center justify-center relative overflow-hidden`}>
              <!-- Animated Background -->
              <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
              
              <div class="relative z-10 text-center">
                <div class="text-6xl mb-4 group-hover:scale-110 transition-transform">
                  {project.icon}
                </div>
                <div class="text-sm font-bold opacity-75">{project.year}</div>
              </div>

              <!-- Decorative Elements -->
              <div class="absolute top-0 right-0 w-20 h-20 bg-white/10 rounded-full blur-2xl"></div>
              <div class="absolute bottom-0 left-0 w-16 h-16 bg-white/10 rounded-full blur-xl"></div>
            </div>

            {/* Right Side - Content */}
            <div class={`${index % 2 === 0 ? 'md:col-span-4' : 'md:col-span-4 md:order-1'} p-8`}>
              <!-- Title -->
              <div class="flex items-start justify-between mb-4">
                <h3 class="text-2xl font-bold group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:${project.gradient} transition-all">
                  {project.title}
                </h3>
                <div class="flex gap-3">
                  <button class={`p-2 rounded-lg bg-${project.color}/20 border border-${project.color}/30 hover:bg-${project.color}/30 transition-all hover:scale-110`}>
                    <Github className="w-5 h-5" />
                  </button>
                  <button class={`p-2 rounded-lg bg-${project.color}/20 border border-${project.color}/30 hover:bg-${project.color}/30 transition-all hover:scale-110`}>
                    <ExternalLink className="w-5 h-5" />
                  </button>
                </div>
              </div>

              <!-- Description -->
              <p class="text-gray-300 mb-6 leading-relaxed">
                {project.description}
              </p>

              <!-- Tech Stack -->
              <div class="space-y-3">
                <p class="text-sm font-semibold text-gray-400">Technologies Used:</p>
                <div class="flex flex-wrap gap-2">
                  {project.tech.map((tech) => (
                    <span class={`px-3 py-1.5 bg-${project.color}/10 border border-${project.color}/30 rounded-lg text-sm font-medium hover:bg-${project.color}/20 hover:scale-105 transition-all cursor-pointer`}>
                      {tech}
                    </span>
                  ))}
                </div>
              </div>

              <!-- Progress Indicator -->
              <div class="mt-6 pt-6 border-t border-white/10">
                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-400">Project Status</span>
                  <span class={`px-3 py-1 bg-green-500/20 border border-green-500/30 rounded-full text-green-400 font-semibold`}>
                    Completed
                  </span>
                </div>
              </div>
            </div>

          </div>

          <!-- Hover Glow Effect -->
          <div class={`absolute inset-0 bg-gradient-to-r ${project.gradient} opacity-0 group-hover:opacity-5 transition-opacity pointer-events-none`}></div>
        </div>
      ))}
    </div>

    <!-- View More Button -->
    <div class="text-center mt-12 animate-fade-in">
      <a 
        href="https://github.com/cusherah-kugan"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-3 px-8 py-4 glass glass-hover rounded-xl font-semibold border border-neon-blue/30 hover:border-neon-blue/50 transition-all hover:scale-105 group"
      >
        <Github className="w-6 h-6 group-hover:text-neon-blue transition-colors" />
        <span>View More on GitHub</span>
        <ExternalLink className="w-5 h-5 group-hover:translate-x-1 transition-transform" />
      </a>
    </div>

  </div>
</section>

<style>
  /* Custom grid alternating layout for visual interest */
  @media (min-width: 768px) {
    .md\:order-1 {
      order: 1;
    }
    .md\:order-2 {
      order: 2;
    }
  }
</style>