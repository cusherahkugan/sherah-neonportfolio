<section id="skills" class="section-container bg-gradient-to-b from-transparent via-black/50 to-transparent">
  <div class="max-w-7xl mx-auto">
    
    <!-- Section Header -->
    <div class="text-center mb-16 animate-fade-in">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Technical <span class="gradient-text">Skills</span>
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-neon-blue to-neon-pink mx-auto mb-4"></div>
      <p class="text-gray-400 max-w-2xl mx-auto">
        A comprehensive toolkit of modern technologies and frameworks I use to bring ideas to life
      </p>
    </div>

    <!-- Skills Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {skillCategories.map((category, index) => (
        <div 
          class="glass rounded-2xl p-6 hover-lift group animate-slide-up"
          style={`animation-delay: ${index * 0.1}s;`}
        >
          <!-- Category Header -->
          <div class="flex items-center gap-3 mb-6 pb-4 border-b border-white/10">
            <div class={`text-3xl p-2 rounded-lg bg-${category.color}/20 border border-${category.color}/30 group-hover:scale-110 transition-transform`}>
              {category.icon}
            </div>
            <h3 class="text-lg font-bold">{category.title}</h3>
          </div>

          <!-- Skills List -->
          <div class="space-y-4">
            {category.skills.map((skill) => (
              <div class="group/skill">
                <div class="flex justify-between items-center mb-2">
                  <span class="text-sm font-medium text-gray-300 group-hover/skill:text-white transition-colors">
                    {skill.name}
                  </span>
                  <span class={`text-xs font-semibold text-${category.color}`}>
                    {skill.level}%
                  </span>
                </div>
                
                <!-- Progress Bar -->
                <div class="h-2 bg-white/5 rounded-full overflow-hidden">
                  <div 
                    class={`h-full bg-gradient-to-r from-${category.color} to-${category.color}/50 rounded-full transition-all duration-1000 ease-out group-hover/skill:shadow-lg group-hover/skill:shadow-${category.color}/50`}
                    style={`width: 0%; animation: fillBar 1s ease-out forwards ${index * 0.1}s;`}
                    data-width={skill.level}
                  ></div>
                </div>
              </div>
            ))}
          </div>

          <!-- Glow Effect on Hover -->
          <div class={`absolute inset-0 bg-gradient-to-br from-${category.color}/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity rounded-2xl pointer-events-none`}></div>
        </div>
      ))}
    </div>

    <!-- Additional Skills Tags -->
    <div class="mt-16 glass rounded-2xl p-8">
      <h3 class="text-xl font-bold mb-6 text-center">Also Experienced With</h3>
      <div class="flex flex-wrap justify-center gap-3">
        {['HTML5', 'CSS3', 'Sass', 'GraphQL', 'Redux', 'Zustand', 'Jest', 'Cypress', 
          'WebSockets', 'Socket.io', 'Nginx', 'Linux', 'Bash', 'Agile/Scrum', 
          'OpenAI API', 'TensorFlow', 'PyTorch', 'Flower Framework'].map((tech) => (
