---
import { Code, Palette, Brain, Users, Clock, Sparkles } from 'lucide-react';

const softSkills = [
  { icon: Users, name: 'Leadership', color: 'neon-red' },
  { icon: Brain, name: 'Problem-Solving', color: 'neon-blue' },
  { icon: Clock, name: 'Time Management', color: 'neon-pink' },
  { icon: Users, name: 'Teamwork', color: 'neon-purple' },
  { icon: Sparkles, name: 'Adaptability', color: 'neon-blue' },
  { icon: Palette, name: 'Creativity', color: 'neon-red' },
];

const stats = [
  { value: '3.6', label: 'GPA', suffix: '/4.0' },
  { value: '15+', label: 'Projects', suffix: '' },
  { value: '10+', label: 'Technologies', suffix: '' },
  { value: '3+', label: 'Hackathons', suffix: '' },
];
---

<section id="about" class="section-container">
  <div class="max-w-6xl mx-auto">
    
    <!-- Section Header -->
    <div class="text-center mb-16 animate-fade-in">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        About <span class="gradient-text">Me</span>
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-neon-red to-neon-blue mx-auto"></div>
    </div>

    <div class="grid md:grid-cols-2 gap-12 items-start">
      
      <!-- Left: Bio & Education -->
      <div class="space-y-6 animate-slide-up">
        <div class="glass rounded-2xl p-8 hover-lift">
          <div class="flex items-center gap-3 mb-6">
            <Code className="w-8 h-8 text-neon-blue" />
            <h3 class="text-2xl font-bold">Who I Am</h3>
          </div>
          
          <p class="text-gray-300 leading-relaxed mb-4">
            I'm a passionate Full-Stack Developer with strong Frontend expertise, currently pursuing my B.Sc. (Hons) 
            in Information Systems at the University of Colombo School of Computing.
          </p>
          
          <p class="text-gray-300 leading-relaxed mb-4">
            With hands-on experience in building responsive and scalable web applications, I specialize in React, 
            Angular, and modern CSS frameworks. I'm driven by the challenge of creating seamless user experiences 
            that combine functionality with stunning visual design.
          </p>

          <p class="text-gray-300 leading-relaxed">
            Currently working as a Software Engineer Intern at Kingslake, where I develop enterprise-level 
            applications and contribute to improving system architecture and user interfaces.
          </p>
        </div>

        <!-- Education Card -->
        <div class="glass rounded-2xl p-8 hover-lift border-l-4 border-neon-blue">
          <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
            <span class="gradient-text-alt">ðŸŽ“ Education</span>
          </h3>
          <div class="space-y-3">
            <div>
              <p class="font-semibold text-lg">B.Sc. (Hons) in Information Systems</p>
              <p class="text-gray-400">University of Colombo School of Computing</p>
              <p class="text-sm text-neon-blue">2022 â€“ Present</p>
            </div>
            <div class="flex items-center gap-2 pt-2">
              <span class="px-3 py-1 bg-neon-red/20 border border-neon-red/30 rounded-full text-sm">
                GPA: 3.6/4.0
              </span>
              <span class="px-3 py-1 bg-neon-blue/20 border border-neon-blue/30 rounded-full text-sm">
                Dean's List
              </span>
            </div>
          </div>
        </div>

        <!-- Research Card -->
        <div class="glass rounded-2xl p-8 hover-lift border-l-4 border-neon-pink">
          <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
            <Brain className="w-6 h-6 text-neon-pink" />
            <span>Academic Research</span>
          </h3>
          <p class="font-semibold mb-2">Cognitive-Inspired Defense Framework for Federated Learning</p>
          <p class="text-gray-400 text-sm mb-3">
            Developing an adaptive defense architecture to mitigate model poisoning attacks in Federated Learning 
            environments using cognitive reasoning loops.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="px-2 py-1 bg-white/5 border border-white/10 rounded text-xs">Python</span>
            <span class="px-2 py-1 bg-white/5 border border-white/10 rounded text-xs">PyTorch</span>
            <span class="px-2 py-1 bg-white/5 border border-white/10 rounded text-xs">Flower</span>
          </div>
        </div>
      </div>

      <!-- Right: Stats & Soft Skills -->
      <div class="space-y-6 animate-slide-up" style="animation-delay: 0.2s;">
        
        <!-- Stats Grid -->
        <div class="grid grid-cols-2 gap-4">
          {stats.map((stat, index) => (
            <div 
              class="glass rounded-xl p-6 text-center hover-lift group"
              style={`animation-delay: ${index * 0.1}s;`}
            >
              <div class="text-3xl md:text-4xl font-bold gradient-text mb-2 group-hover:scale-110 transition-transform">
                {stat.value}{stat.suffix}
              </div>
              <div class="text-gray-400 text-sm">{stat.label}</div>
            </div>
          ))}
        </div>

        <!-- Soft Skills -->
        <div class="glass rounded-2xl p-8 hover-lift">
          <h3 class="text-xl font-bold mb-6 flex items-center gap-2">
            <Sparkles className="w-6 h-6 text-neon-blue" />
            <span>Soft Skills</span>
          </h3>
          
          <div class="grid grid-cols-2 gap-4">
            {softSkills.map((skill) => {
              const Icon = skill.icon;
              return (
                <div class="flex items-center gap-3 p-3 rounded-lg hover:bg-white/5 transition-all group cursor-pointer">
                  <div class={`p-2 rounded-lg bg-${skill.color}/20 border border-${skill.color}/30 group-hover:scale-110 transition-transform`}>
                    <Icon className={`w-5 h-5 text-${skill.color}`} />
                  </div>
                  <span class="text-sm font-medium">{skill.name}</span>
                </div>
              );
            })}
          </div>
        </div>

        <!-- Interests -->
        <div class="glass rounded-2xl p-8 hover-lift">
          <h3 class="text-xl font-bold mb-6">Areas of Interest</h3>
          <div class="flex flex-wrap gap-3">
            <span class="px-4 py-2 bg-gradient-to-r from-neon-red/20 to-neon-pink/20 border border-neon-red/30 rounded-full text-sm hover:scale-105 transition-transform cursor-pointer">
              Frontend Development
            </span>
            <span class="px-4 py-2 bg-gradient-to-r from-neon-blue/20 to-neon-purple/20 border border-neon-blue/30 rounded-full text-sm hover:scale-105 transition-transform cursor-pointer">
              UI/UX Design
            </span>
            <span class="px-4 py-2 bg-gradient-to-r from-neon-pink/20 to-neon-purple/20 border border-neon-pink/30 rounded-full text-sm hover:scale-105 transition-transform cursor-pointer">
              Machine Learning
            </span>
            <span class="px-4 py-2 bg-gradient-to-r from-neon-blue/20 to-neon-red/20 border border-neon-blue/30 rounded-full text-sm hover:scale-105 transition-transform cursor-pointer">
              Federated Learning
            </span>
            <span class="px-4 py-2 bg-gradient-to-r from-neon-purple/20 to-neon-pink/20 border border-neon-purple/30 rounded-full text-sm hover:scale-105 transition-transform cursor-pointer">
              Security
            </span>
            <span class="px-4 py-2 bg-gradient-to-r from-neon-red/20 to-neon-blue/20 border border-neon-red/30 rounded-full text-sm hover:scale-105 transition-transform cursor-pointer">
              Project Management
            </span>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>