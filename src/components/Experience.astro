<style>
  .experience-section {
    background: linear-gradient(135deg, var(--tron-black) 0%, var(--tron-dark) 100%);
  }

  .experience-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .timeline {
    position: relative;
    padding: 2rem 0;
  }

  .timeline-line {
    position: absolute;
    left: 30px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(180deg, var(--tron-green), transparent);
    box-shadow: 0 0 10px var(--tron-green);
  }

  .experience-item {
    position: relative;
    padding-left: 80px;
    margin-bottom: 3rem;
  }

  .timeline-dot {
    position: absolute;
    left: 21px;
    top: 0;
    width: 20px;
    height: 20px;
    background: var(--tron-green);
    border: 3px solid var(--tron-black);
    border-radius: 50%;
    box-shadow: 0 0 20px var(--tron-green);
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%, 100% {
      box-shadow: 0 0 20px var(--tron-green);
    }
    50% {
      box-shadow: 0 0 40px var(--tron-green), 0 0 60px var(--tron-green);
    }
  }

  .experience-card {
    padding: 2rem;
  }

  .experience-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .experience-title-wrapper {
    flex: 1;
  }

  .experience-title {
    font-size: 1.8rem;
    color: var(--tron-green);
    margin-bottom: 0.5rem;
    font-weight: 700;
  }

  .company-badge {
    display: inline-block;
  }

  .company-name {
    font-family: 'Orbitron', sans-serif;
    color: #ffffff;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .experience-date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(0, 255, 65, 0.1);
    border: 1px solid var(--tron-green);
    border-radius: 20px;
    font-family: 'Orbitron', sans-serif;
    color: var(--tron-green);
    font-size: 0.9rem;
  }

  .date-icon {
    width: 18px;
    height: 18px;
  }

  .experience-description {
    margin-bottom: 1.5rem;
  }

  .responsibility-item {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    align-items: flex-start;
  }

  .icon-wrapper {
    flex-shrink: 0;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--tron-green);
    border-radius: 50%;
    padding: 5px;
  }

  .icon-wrapper svg {
    width: 100%;
    height: 100%;
  }

  .responsibility-item p {
    color: #d0d0d0;
    line-height: 1.6;
    margin: 0;
  }

  .tech-stack {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--glass-border);
    flex-wrap: wrap;
  }

  .tech-label {
    font-family: 'Orbitron', sans-serif;
    color: var(--tron-green);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .tech-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tech-tag {
    padding: 0.4rem 1rem;
    background: rgba(0, 255, 65, 0.1);
    border: 1px solid var(--tron-green);
    border-radius: 15px;
    font-size: 0.85rem;
    color: var(--tron-green);
    font-family: 'Orbitron', sans-serif;
  }

  .achievements-section {
    margin-top: 4rem;
    padding-left: 80px;
  }

  .achievements-title {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 1.8rem;
    color: var(--tron-green);
    margin-bottom: 2rem;
    text-transform: uppercase;
  }

  .trophy-icon {
    width: 40px;
    height: 40px;
  }

  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .achievement-card {
    text-align: center;
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .achievement-card:hover {
    transform: translateY(-10px) scale(1.05);
  }

  .achievement-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    filter: drop-shadow(0 0 10px var(--tron-green));
  }

  .achievement-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.5rem;
    color: var(--tron-green);
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .achievement-subtitle {
    color: #b0b0b0;
    font-size: 0.95rem;
  }

  @media (max-width: 768px) {
    .timeline-line {
      left: 15px;
    }

    .timeline-dot {
      left: 6px;
    }

    .experience-item,
    .achievements-section {
      padding-left: 50px;
    }

    .experience-header {
      flex-direction: column;
    }

    .experience-title {
      font-size: 1.5rem;
    }

    .achievements-grid {
      grid-template-columns: 1fr;
    }
  }
</style>