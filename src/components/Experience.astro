---

<section id="experience" class="section-container">
  <div class="max-w-7xl mx-auto">
    
    <!-- Section Header -->
    <div class="text-center mb-16 animate-fade-in">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Experience & <span class="gradient-text">Activities</span>
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-neon-red to-neon-blue mx-auto"></div>
    </div>

    <!-- Professional Experience -->
    <div class="mb-16 animate-slide-up">
      <div class="flex items-center gap-3 mb-8">
        <Briefcase className="w-8 h-8 text-neon-blue" />
        <h3 class="text-2xl font-bold">Professional Experience</h3>
      </div>

      <div class="glass rounded-2xl p-8 hover-lift border-l-4 border-neon-blue">
        <!-- Header -->
        <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-6 gap-4">
          <div>
            <h4 class="text-2xl font-bold gradient-text-alt mb-2">{experience.role}</h4>
            <p class="text-xl text-gray-300">{experience.company}</p>
            <p class="text-gray-400 text-sm">{experience.location}</p>
          </div>
          <div class="flex items-center gap-2 px-4 py-2 bg-neon-blue/20 border border-neon-blue/30 rounded-full">
            <Calendar className="w-4 h-4 text-neon-blue" />
            <span class="text-sm font-semibold">{experience.period}</span>
          </div>
        </div>

        <!-- Projects -->
        <div class="space-y-6">
          {experience.projects.map((project, index) => (
            <div class="border-l-2 border-white/20 pl-6 hover:border-neon-blue transition-colors">
              <h5 class="text-lg font-semibold mb-3 text-neon-blue">{project.name}</h5>
              <ul class="space-y-2">
                {project.achievements.map((achievement) => (
                  <li class="flex items-start gap-3 text-gray-300">
                    <span class="text-neon-red mt-1.5">‚ñπ</span>
                    <span class="flex-1">{achievement}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>

        <!-- Tech Stack -->
        <div class="mt-6 pt-6 border-t border-white/10">
          <p class="text-sm text-gray-400 mb-3">Technologies Used:</p>
          <div class="flex flex-wrap gap-2">
            {['Angular', 'TypeScript', 'REST APIs', 'AWS S3', 'Google Maps API', 'Postman'].map((tech) => (
              <span class="px-3 py-1 bg-white/5 border border-white/10 rounded-full text-xs hover:bg-white/10 transition-colors">
                {tech}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- Hackathons & Competitions -->
    <div class="mb-16 animate-slide-up" style="animation-delay: 0.2s;">
      <div class="flex items-center gap-3 mb-8">
        <Trophy className="w-8 h-8 text-neon-red" />
        <h3 class="text-2xl font-bold">Hackathons & Competitions</h3>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {hackathons.map((hackathon, index) => (
          <div 
            class="glass rounded-xl p-6 hover-lift group relative overflow-hidden"
            style={`animation-delay: ${index * 0.1}s;`}
          >
            <!-- Background Glow -->
            <div class={`absolute inset-0 bg-gradient-to-br from-${hackathon.color}/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity`}></div>
            
            <div class="relative z-10">
              <!-- Year Badge -->
              <div class={`inline-block px-3 py-1 bg-${hackathon.color}/20 border border-${hackathon.color}/30 rounded-full text-sm font-semibold mb-4`}>
                {hackathon.year}
              </div>

              <h4 class="text-lg font-bold mb-2 group-hover:text-white transition-colors">
                {hackathon.title}
              </h4>
              <p class="text-sm text-gray-400 mb-3">{hackathon.organization}</p>
              
              <div class={`flex items-center gap-2 text-${hackathon.color} font-semibold`}>
                <Trophy className="w-4 h-4" />
                <span class="text-sm">{hackathon.achievement}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Clubs & Activities -->
    <div class="animate-slide-up" style="animation-delay: 0.3s;">
      <div class="flex items-center gap-3 mb-8">
        <Users className="w-8 h-8 text-neon-pink" />
        <h3 class="text-2xl font-bold">Clubs & Activities</h3>
      </div>

      <div class="glass rounded-2xl p-8">
        <div class="grid md:grid-cols-2 gap-6">
          {activities.map((activity, index) => (
            <div 
              class="flex items-start gap-4 p-4 rounded-lg hover:bg-white/5 transition-all group cursor-pointer"
              style={`animation-delay: ${index * 0.05}s;`}
            >
              <div class="text-3xl group-hover:scale-110 transition-transform">
                {activity.icon}
              </div>
              <div class="flex-1">
                <div class="flex items-start justify-between gap-2 mb-1">
                  <h5 class="font-semibold group-hover:text-neon-blue transition-colors">
                    {activity.role}
                  </h5>
                  <span class="text-xs text-gray-500 whitespace-nowrap">{activity.period}</span>
                </div>
                <p class="text-sm text-gray-400">{activity.organization}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

  </div>
</section>