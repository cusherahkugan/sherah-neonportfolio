	}
  
	.neon-button.secondary {
	  background: var(--tron-green);
	  color: var(--tron-black);
	}
  
	.neon-button.secondary::before {
	  background: var(--tron-black);
	}
  
	.neon-button.secondary:hover {
	  color: var(--tron-green);
	}
  
	.hero-social {
	  display: flex;
	  gap: 1.5rem;
	  margin-top: 3rem;
	}
  
	.social-link {
	  color: var(--tron-green);
	  transition: all 0.3s ease;
	  display: flex;
	  align-items: center;
	  justify-content: center;
	  width: 50px;
	  height: 50px;
	  border: 2px solid var(--tron-green);
	  border-radius: 50%;
	}
  
	.social-link:hover {
	  background: var(--tron-green);
	  color: var(--tron-black);
	  transform: translateY(-5px) rotate(360deg);
	  box-shadow: 0 0 20px var(--tron-green);
	}
  
	.hero-visual {
	  display: flex;
	  align-items: center;
	  justify-content: center;
	  position: relative;
	}
  
	.hexagon-container {
	  position: relative;
	  width: 400px;
	  height: 400px;
	}
  
	.hexagon {
	  position: absolute;
	  width: 200px;
	  height: 200px;
	  background: transparent;
	  border: 2px solid var(--tron-green);
	  clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
	  animation: rotate 20s linear infinite;
	  box-shadow: 0 0 30px rgba(0, 255, 65, 0.5);
	  top: 50%;
	  left: 50%;
	  transform: translate(-50%, -50%);
	}
  
	.hex-2 {
	  width: 280px;
	  height: 280px;
	  animation: rotate 15s linear infinite reverse;
	  opacity: 0.6;
	}
  
	.hex-3 {
	  width: 360px;
	  height: 360px;
	  animation: rotate 25s linear infinite;
	  opacity: 0.3;
	}
  
	@keyframes rotate {
	  from {
		transform: translate(-50%, -50%) rotate(0deg);
	  }
	  to {
		transform: translate(-50%, -50%) rotate(360deg);
	  }
	}
  
	.scroll-indicator {
	  position: absolute;
	  bottom: 2rem;
	  left: 50%;
	  transform: translateX(-50%);
	  display: flex;
	  flex-direction: column;
	  align-items: center;
	  gap: 0.5rem;
	  color: var(--tron-green);
	  font-family: 'Orbitron', sans-serif;
	  font-size: 0.8rem;
	  letter-spacing: 2px;
	}
  
	.scroll-arrow {
	  width: 2px;
	  height: 40px;
	  background: var(--tron-green);
	  position: relative;
	  animation: scroll 2s ease-in-out infinite;
	}
  
	.scroll-arrow::after {
	  content: '';
	  position: absolute;
	  bottom: 0;
	  left: 50%;
	  transform: translateX(-50%);
	  width: 8px;
	  height: 8px;
	  border-right: 2px solid var(--tron-green);
	  border-bottom: 2px solid var(--tron-green);
	  transform: translateX(-50%) rotate(45deg);
	}
  
	@keyframes scroll {
	  0%, 100% {
		opacity: 0.3;
		height: 30px;
	  }
	  50% {
		opacity: 1;
		height: 50px;
	  }
	}
  
	@media (max-width: 968px) {
	  .hero-content {
		grid-template-columns: 1fr;
		text-align: center;
	  }
  
	  .hero-title {
		font-size: 2.5rem;
	  }
  
	  .hero-subtitle {
		font-size: 1.5rem;
	  }
  
	  .hero-buttons {
		justify-content: center;
		flex-wrap: wrap;
	  }
  
	  .hero-social {
		justify-content: center;
	  }
  
	  .hero-visual {
		margin-top: 3rem;
	  }
  
	  .hexagon-container {
		width: 300px;
		height: 300px;
	  }
  
	  .hexagon {
		width: 150px;
		height: 150px;
	  }
  
	  .hex-2 {
		width: 210px;
		height: 210px;
	  }
  
	  .hex-3 {
		width: 270px;
		height: 270px;
	  }
	}

	/* Profile Image - bigger */
.profile-image {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 400px;       /* bigger */
  height: 400px;      /* bigger */
  border-radius: 50%;
  border: 4px solid var(--tron-green);
  transform: translate(-50%, -50%);
  box-shadow: 0 0 40px var(--tron-green);
  z-index: 10;        /* above floating hexagons */
  object-fit: cover;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: translate(-50%, -50%) scale(1); }
  50% { transform: translate(-50%, -50%) scale(1.0); }
}

