---
import { Github, Linkedin, Mail, MapPin, Download } from 'lucide-react';
---

<section id="home" class="min-h-screen flex items-center justify-center relative overflow-hidden pt-20">
  <div class="section-container">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      
      <!-- Left: Text Content -->
      <div class="space-y-6 animate-slide-up">
        <div class="inline-block">
          <span class="glass px-4 py-2 rounded-full text-sm text-neon-blue border border-neon-blue/30">
            ðŸ‘‹ Welcome to my portfolio
          </span>
        </div>

        <h1 class="text-5xl md:text-7xl font-bold leading-tight">
          Hi, I'm <br/>
          <span class="gradient-text inline-block animate-glow">
            Cusherah Kugananthan
          </span>
        </h1>

        <p class="text-xl md:text-2xl text-gray-300">
          Full-Stack Developer
        </p>

        <p class="text-gray-400 text-lg max-w-xl">
          Crafting responsive and scalable web applications with React, Angular, and modern technologies. 
          Specialized in frontend development with a passion for creating stunning user experiences.
        </p>

        <div class="flex items-center gap-4 text-gray-400">
          <MapPin className="w-5 h-5 text-neon-red" />
          <span>Colombo, Sri Lanka</span>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-4 pt-4">
          <a 
            href="#contact"
            class="group relative px-8 py-3 bg-gradient-to-r from-neon-red to-neon-pink rounded-lg font-semibold overflow-hidden transition-all hover:scale-105 hover:shadow-2xl hover:shadow-neon-red/50"
          >
            <span class="relative z-10">Get In Touch</span>
            <div class="absolute inset-0 bg-gradient-to-r from-neon-pink to-neon-red opacity-0 group-hover:opacity-100 transition-opacity"></div>
          </a>

          <a 
            href="#projects"
            class="px-8 py-3 glass glass-hover rounded-lg font-semibold border border-white/20 transition-all hover:scale-105"
          >
            View Projects
          </a>

          <a 
            href="/resume.pdf"
            download
            class="px-6 py-3 glass glass-hover rounded-lg font-semibold border border-neon-blue/30 transition-all hover:scale-105 flex items-center gap-2"
          >
            <Download className="w-5 h-5" />
            Resume
          </a>
        </div>

        <!-- Social Links -->
        <div class="flex gap-4 pt-4">
          <a 
            href="https://github.com/cusherah-kugan"
            target="_blank"
            rel="noopener noreferrer"
            class="p-3 glass glass-hover rounded-lg hover:text-neon-blue transition-all hover:scale-110"
            aria-label="GitHub"
          >
            <Github className="w-6 h-6" />
          </a>
          <a 
            href="https://linkedin.com/in/cusherah-kugan"
            target="_blank"
            rel="noopener noreferrer"
            class="p-3 glass glass-hover rounded-lg hover:text-neon-blue transition-all hover:scale-110"
            aria-label="LinkedIn"
          >
            <Linkedin className="w-6 h-6" />
          </a>
          <a 
            href="mailto:cusherahkugan@gmail.com"
            class="p-3 glass glass-hover rounded-lg hover:text-neon-red transition-all hover:scale-110"
            aria-label="Email"
          >
            <Mail className="w-6 h-6" />
          </a>
        </div>
      </div>

      <!-- Right: 3D Card Effect -->
      <div class="relative animate-float">
        <div class="glass rounded-2xl p-8 hover-lift relative overflow-hidden group">
          <!-- Animated Border -->
          <div class="absolute inset-0 bg-gradient-to-r from-neon-red via-neon-blue to-neon-pink opacity-0 group-hover:opacity-20 transition-opacity blur-xl"></div>
          
          <!-- Content -->
          <div class="relative z-10 space-y-6">
            <div class="flex items-center gap-4">
              <div class="w-20 h-20 rounded-full bg-gradient-to-br from-neon-red to-neon-blue p-1">
                <div class="w-full h-full rounded-full bg-black flex items-center justify-center text-3xl font-bold">
                  CK
                </div>
              </div>
              <div>
                <h3 class="text-xl font-bold">Currently</h3>
                <p class="text-gray-400">Software Engineer Intern</p>
              </div>
            </div>

            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-gray-400">Education</span>
                <span class="text-neon-blue font-semibold">B.Sc. in IS</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-400">GPA</span>
                <span class="text-neon-red font-semibold">3.6/4.0</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-400">Experience</span>
                <span class="text-neon-pink font-semibold">3+ Years</span>
              </div>
            </div>

            <div class="pt-4 border-t border-white/10">
              <p class="text-sm text-gray-400">
                Dean's List achiever specializing in Frontend Development, UI/UX Design, and Machine Learning
              </p>
            </div>
          </div>
        </div>

        <!-- Floating Elements -->
        <div class="absolute -top-10 -right-10 w-32 h-32 bg-neon-red/20 rounded-full blur-2xl animate-pulse-slow"></div>
        <div class="absolute -bottom-10 -left-10 w-32 h-32 bg-neon-blue/20 rounded-full blur-2xl animate-pulse-slow" style="animation-delay: 1s;"></div>
      </div>

    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-gradient-to-b from-neon-blue to-transparent rounded-full mt-2"></div>
    </div>
  </div>
</section>