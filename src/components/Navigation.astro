<nav class="navbar">
  <div class="nav-container">
    <div class="nav-logo">
      <span class="logo-bracket">&lt;</span>
      <span class="logo-text">CK</span>
      <span class="logo-bracket">/&gt;</span>
    </div>
    
    <ul class="nav-menu" id="navMenu">
      <li><a href="#hero" class="nav-link">Home</a></li>
      <li><a href="#about" class="nav-link">About</a></li>
      <li><a href="#skills" class="nav-link">Skills</a></li>
      <li><a href="#experience" class="nav-link">Experience</a></li>
      <li><a href="#projects" class="nav-link">Projects</a></li>
      <li><a href="#education" class="nav-link">Education</a></li>
      <li><a href="#contact" class="nav-link">Contact</a></li>
    </ul>
    
    <div class="hamburger" id="hamburger">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
</nav>

<script>
  const hamburger = document.getElementById('hamburger');
  const navMenu = document.getElementById('navMenu');
  
  hamburger?.addEventListener('click', () => {
    hamburger.classList.toggle('active');
    navMenu?.classList.toggle('active');
  });
  
  // Close menu when clicking on a link
  document.querySelectorAll('.nav-link').forEach(link => {
    link.addEventListener('click', () => {
      hamburger?.classList.remove('active');
      navMenu?.classList.remove('active');
    });
  });

  // Navbar scroll effect
  let lastScroll = 0;
  const navbar = document.querySelector('.navbar');
  
  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    
    if (currentScroll > 100) {
      navbar?.classList.add('scrolled');
    } else {
      navbar?.classList.remove('scrolled');
    }
    
    lastScroll = currentScroll;
  });
</script>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    padding: 1.5rem 5%;
    transition: all 0.3s ease;
    background: transparent;
  }

  .navbar.scrolled {
    background: rgba(10, 14, 39, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 255, 65, 0.3);
    box-shadow: 0 5px 30px rgba(0, 255, 65, 0.1);
    padding: 1rem 5%;
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-logo {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.8rem;
    font-weight: 900;
    color: var(--tron-green);
    text-shadow: 0 0 20px var(--tron-green);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .logo-bracket {
    color: #ffffff;
    font-weight: 400;
  }

  .logo-text {
    margin: 0 0.3rem;
    animation: logo-pulse 2s ease-in-out infinite;
  }

  @keyframes logo-pulse {
    0%, 100% {
      text-shadow: 0 0 20px var(--tron-green);
    }
    50% {
      text-shadow: 0 0 40px var(--tron-green), 0 0 60px var(--tron-green);
    }
  }

  .nav-logo:hover {
    transform: scale(1.05);
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  .nav-link {
    font-family: 'Orbitron', sans-serif;
    color: #ffffff;
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    letter-spacing: 1px;
    text-transform: uppercase;
    position: relative;
    padding: 0.5rem 0;
    transition: all 0.3s ease;
  }

  .nav-link::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--tron-green);
    box-shadow: 0 0 10px var(--tron-green);
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    color: var(--tron-green);
  }

  .nav-link:hover::before {
    width: 100%;
  }

  .hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    gap: 6px;
  }

  .hamburger span {
    width: 30px;
    height: 3px;
    background: var(--tron-green);
    border-radius: 3px;
    transition: all 0.3s ease;
    box-shadow: 0 0 10px var(--tron-green);
  }

  .hamburger.active span:nth-child(1) {
    transform: rotate(45deg) translate(8px, 8px);
  }

  .hamburger.active span:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active span:nth-child(3) {
    transform: rotate(-45deg) translate(8px, -8px);
  }

  @media (max-width: 768px) {
    .hamburger {
      display: flex;
    }

    .nav-menu {
      position: fixed;
      left: -100%;
      top: 70px;
      flex-direction: column;
      background: rgba(10, 14, 39, 0.98);
      backdrop-filter: blur(20px);
      width: 100%;
      text-align: center;
      transition: left 0.3s ease;
      border-bottom: 2px solid var(--tron-green);
      box-shadow: 0 10px 50px rgba(0, 255, 65, 0.2);
      padding: 2rem 0;
      gap: 0;
    }

    .nav-menu.active {
      left: 0;
    }

    .nav-menu li {
      padding: 1rem 0;
      border-bottom: 1px solid rgba(0, 255, 65, 0.1);
    }

    .nav-link {
      font-size: 1.1rem;
    }
  }
</style>